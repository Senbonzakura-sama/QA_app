{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center" style="height: 70vh;">
            <div class="col-md-6">
                <div class="card border-primary rounded">
                    <div class="card-body">
                        <h1 class="card-title", style="text-align: center">{{ page_title }}</h1>
                        {{ form_start(form) }}
                        {% if false == form.vars.valid %}
                            {% include 'default/_single_alert_message.html.twig' with {
                                type: 'danger',
                                message: 'message.form_error'|trans,
                            }%}
                        {% endif %}
                        {{ form_widget(form) }}
                        <div class="form-group row justify-content-end">
                            <input type="submit" value="{{ submit_label }}" class="btn btn-primary"/>
                        </div>
                        {% if back_to_list_path|default(false) %}
                            <div class="form-group row justify-content-start">
                                <a href="{{ url(back_to_list_path) }}" class="btn btn-link">
                                    {{ 'action.back_to_list'|trans }}
                                </a>
                            </div>
                        {% endif %}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
